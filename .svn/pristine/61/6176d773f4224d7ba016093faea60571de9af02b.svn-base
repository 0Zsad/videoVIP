@charset "UTF-8";

* {
	margin: 0;
	padding: 0
}

html {
	height: 100%;
}

body {
	height: 100%;
}

.bg {
	background: url(../img/body.jpg);
	height: 100%;
	text-align: center;
	line-height: 500px;
}

.bg-blur {
	float: left;
	width: 100%;
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	-webkit-filter: blur(10px);
	-moz-filter: blur(10px);
	-o-filter: blur(10px);
	-ms-filter: blur(10px);
	filter: blur(10px);
}

.dowebok {
	position: absolute;
	left: 50%;
	top: 50%;
	width: 430px;
	height: 550px;
	margin: -300px 0 0 -215px;
	border: 1px solid #fff;
	border-radius: 20px;
	overflow: hidden;
}

img{
	width: 200px;
	height: 200px;
	margin: 10px 115px 30px;
}

.form-item {
	position: relative;
	width: 360px;
	margin: 0 auto;
	padding-bottom: 30px;
}

.form-item input {
	width: 288px;
	height: 48px;
	padding-left: 70px;
	border: 1px solid #fff;
	border-radius: 25px;
	font-size: 18px;
	color: #fff;
	background-color: transparent;
	outline: none;
}

.form-item button {
	width: 360px;
	height: 50px;
	border: 0;
	border-radius: 25px;
	font-size: 20px;
	color: #000000;
	outline: none;
	cursor: pointer;
	background-color: #d0d0d0;
}

#username {
	background: url(../img/username.png) 20px 14px no-repeat; 
	background-size: 10% 65%;
	background-position-y:center;
}

#password {
	background: url(../img/pwd.png) 20px 14px no-repeat;
	background-size: 10% 65%;
	background-position-y:center;
}

.reg-bar {
	width: 360px;
	margin: 20px auto 0;
	font-size: 15px;
	overflow: hidden;
}

.reg-bar a {
	color: #fff;
	text-decoration: none;
}

.reg-bar a:hover {
	text-decoration: underline;
}

.reg-bar .reg {
	float: left;
}

.reg-bar .forget {
	float: right;
}

.dowebok ::-webkit-input-placeholder {
	font-size: 18px;
	line-height: 1.4;
	color: #fff;
}
