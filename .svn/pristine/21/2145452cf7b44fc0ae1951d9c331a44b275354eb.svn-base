/*全局超链接样式*/
a{
	text-decoration: none !important;
	color: #000000 !important;
}

a:hover{
	color: orange !important;
}

/*************************** 导航条 ************************************/
@media screen and (min-width: 1480px) {
	.container{
		width: 1480px;
	}
}

#nav1{
	height: 52px;
	width: 1480px;
	margin: 0 auto;
	background-color: whitesmoke;
	border-bottom: 3px solid orange;
}

.head{
	height: 52px;
	background-color: whitesmoke;
	border-bottom: 3px solid orange;
}

/*导航栏搜索框*/
#nav-text{
	position: relative;
	width: 250px;
}

/*用户头像*/
#yhtx{
	position: relative;
	top: 8px;
	right: -560px;
	font-size: 16px;
}

#yhtx img{
	height: 40px;
	width: 40px;
}

/*************************** 主体 ************************************/
/*轮播图尺寸*/
.item-lunbo{
	height: 450px;
	width: 100%;
}

/*广告*/
.gg{
	margin-top: 20px;
	margin-bottom: 20px;
}

.gg img{
	height: 100px;
	width: 100%;
}

/*热播右侧图片尺寸*/
.img-size .col-md-3 .thumbnail a img{
	height: 150px;
}

/*下半区（电影动漫...）图片尺寸  （注意权重）*/
#img-movie .col-md-2 .thumbnail img{
	height: 200px;
}

.item-phb{
	position: relative;
	margin-top: 24px;
}

/*更多*/
#more{
	position: absolute;
	top: 1px;
	left: 160px;
}

.item-biaoge tr{
	display: block;
	font-size: 20px;
	margin: 5px 0px 5px 0px;
}

.item-biaoge tr td:first-child{
	padding-right: 10px;
	color: red;
}

/*************************** 底部 ************************************/
.item-foot{
	padding-top: 70px;
	padding-bottom: 60px;
	background-color: whitesmoke;
	font-size: 16px;
}
